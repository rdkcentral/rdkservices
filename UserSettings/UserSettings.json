    "jsonrpc": "2.0",
    "info": {
        "title": "UserSettings API",
        "class": "org.rdk.UserSettings",
        "description": "The `UserSettings`, that is responsible for persisting and notifying listeners of any change of these settings.."
    },
    "common": {
        "$ref": "../common/common.json"
