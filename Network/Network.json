                "required": [
                    "iface",
                    "ipv6"
                ]
            },
            "result": {
                "type": "object",
                "properties": {
                    "public_ip":{
                        "summary": "Returns an public ip of the device ,if ipv6 is `true`,returns IPv6 public ip , otherwise returns IPv4 public ip",
