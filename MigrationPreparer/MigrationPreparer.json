{
    "$schema": "https://raw.githubusercontent.com/rdkcentral/rdkservices/main/Tools/json_generator/schemas/interface.schema.json",
    "jsonrpc": "2.0",
    "info": {
        "title": "MigrationPreparer API",
        "class": "MigrationPreparer",
        "description": "The `MigrationPreparer` that is responsible for persisting and notifying listeners of any change of key/value pairs and get/set/reset value of MigrationReady RFC value"
    },
    "common": {
        "$ref": "../common/common.json"
    },
    "definitions": {
        "name": {
            "summary": "Name for the value to be written",
            "type": "string",
            "example": "name1"
        },
        "value": {
            "summary": "JSON value for the given name formatted as string",
            "type": "string",
            "example": "value1"
        },
        "componentName": {
            "summary": "Name of component to be added to the list of components that are already ready for migration",
            "type": "string",
            "example": "RA01"
        },
        "componentList": {
            "summary": "list of components which are already ready for migration",
            "type": "string",
            "example": "RA01"
        },
        "resetType": {
            "summary": "Type indicates whether it should delete all entries in the datastore or componentList for migration or both",
            "type": "string",
            "example": "RESET_DATA, RESET_READINESS, RESET_ALL"
        },
        "success": {
            "summary": "Legacy parameter (always true)",
            "type": "boolean",
            "default": true,
            "example": true
        }
    },
    "methods": {
        "delete": {
            "summary": "delete name and value from the datastore",
            "params": {
                "type": "object",
                "properties": {
                    "name": {
                        "$ref": "#/definitions/name"
                    }
                },
                "required": [
                    "value"
                ]
            },
            "result": {
                "type": "object",
                "properties": {
                    "success": {
                        "$ref": "#/definitions/success"
                    }
                },
                "required": [
                    "success"
                ]
            },
            "errors": [
                {
                    "description": "Unknown error",
                    "properties": {
                        "code": {
                            "type": "string",
                            "description": "Error code"
                        },
                        "message": {
                            "type": "string",
                            "description": "Error message"
                        }
                    },
                    "required": [
                        "code",
                        "message"
                    ]                    
                }
            ]
        },
        "read": {
            "summary": " get the value for given name from datastore",
            "params": {
                "type": "object",
                "properties": {
                    "name": {
                        "$ref": "#/definitions/name"
                    }
                },
                "required": [
                    "name"
                ]
            },
            "result": {
                "type": "object",
                "properties": {
                    "value": {
                        "$ref": "#/definitions/value"
                    },                    
                    "success": {
                        "$ref": "#/definitions/success"
                    }
                },
                "required": [
                    "value",
                    "success"
                ]
            },
            "errors": [
                {
                    "description": "Unknown error",
                    "properties": {
                        "code": {
                            "type": "string",
                            "description": "Error code"
                        },
                        "message": {
                            "type": "string",
                            "description": "Error message"
                        }
                    },
                    "required": [
                        "code",
                        "message"
                    ]                    
                }
            ]
        },
        "write": {
            "summary": "set the value for given name to datastore",
            "params": {
                "type": "object",
                "properties": {
                    "name": {
                        "$ref": "#/definitions/name"
                    },
                    "value": {
                        "$ref": "#/definitions/value"
                    }
                },
                "required": [
                    "name",
                    "value"
                ]
            },
            "result": {
                "type": "object",
                "properties": {
                    "success": {
                        "$ref": "#/definitions/success"
                    }
                },
                "required": [
                    "success"
                ]
            },
            "errors": [
                {
                    "description": "Unknown error",
                    "properties": {
                        "code": {
                            "type": "string",
                            "description": "Error code"
                        },
                        "message": {
                            "type": "string",
                            "description": "Error message"
                        }
                    },
                    "required": [
                        "code",
                        "message"
                    ]                    
                }
            ]
        },
        "setComponentReadiness": {
            "summary": "Add the componentName into list of components which are already ready for migration in Alphanumeric order",
            "params": {
              "type": "object",
              "properties": {
                "componentName": {
                  "$ref": "#/definitions/componentName"
                }
              },
              "required": [
                "componentName"
              ]
            },
            "result": {
                "type": "object",
                "properties": {
                    "success": {
                        "$ref": "#/definitions/success"
                    }
                },
                "required": [
                    "success"
                ]
            },
            "errors": [
                {
                    "description": "Unknown error",
                    "properties": {
                        "code": {
                            "type": "string",
                            "description": "Error code"
                        },
                        "message": {
                            "type": "string",
                            "description": "Error message"
                        }
                    },
                    "required": [
                        "code",
                        "message"
                    ]                    
                }
            ]
        },
        "getComponentReadiness": {
            "summary": "Returns the list of components which are already ready for migration",
            "result": {
                "type": "object",
                "properties": {
                    "componentList": {
                        "type": "array",
                        "items": {
                            "$ref": "#/definitions/componentName"
                        }
                    },
                    "success": {
                        "$ref": "#/definitions/success"
                    }
                },
                "required": [
                    "componentList",
                    "success"
                ]
            },
            "errors": [
                {
                    "description": "Unknown error",
                    "properties": {
                        "code": {
                            "type": "string",
                            "description": "Error code"
                        },
                        "message": {
                            "type": "string",
                            "description": "Error message"
                        }
                    },
                    "required": [
                        "code",
                        "message"
                    ]                    
                }
            ]
        },
        "reset": {
            "summary": "Reset based on resettype, should delete all entries in the datastore or componentList for migration or both",
            "params": {
                "type": "object",
                "properties": {
                    "resetType": {
                        "$ref": "#/definitions/resetType"
                    }
                },
                "required": [
                    "resetType"
                ]
            },
            "result": {
                "type": "object",
                "properties": {
                    "success": {
                        "$ref": "#/definitions/success"
                    }
                },
                "required": [
                    "success"
                ]
            },
            "errors": [
                {
                    "description": "Unknown error",
                    "properties": {
                        "code": {
                            "type": "string",
                            "description": "Error code"
                        },
                        "message": {
                            "type": "string",
                            "description": "Error message"
                        }
                    },
                    "required": [
                        "code",
                        "message"
                    ]                    
                }
            ]
        }
    },
    "events": {
        "onValueChanged": {
            "summary": "Event to notify listeners of any change of name/value pairs",
            "params": {
                "type": "object",
                "properties": {
                    "name": {
                        "$ref": "#/definitions/name"
                    },
                    "value": {
                        "$ref": "#/definitions/value"
                    }
                },
                "required": [
                    "name",
                    "value"
                ]
            }
        }
    }        
}
